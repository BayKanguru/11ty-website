---
title: Posts
layout: base.njk
---

<ul class="cards">
    {% for post in collections.post | reverse %}
    <li class="card__list-item">
        <article class="card">
            <h3 class="card__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
            <img class="card__image" src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}">
            <p class="card__metadata">by {{ post.data.author }} on {{ post.date | postDate}}</p>
            <p class="card__description">{{ post.data.description }}</p>
            <a class="card__btn" href="{{ post.url }}">Continue reading...</a>
        </article>
    </li>
    {% endfor %}
</ul>